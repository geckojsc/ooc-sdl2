Name: SDL 2.0 OpenGL support
Description: OpenGL headers + libraries for SDL2
Requires: sdl2

# Desktop platforms
version (linux || windows || (apple && !ios)) {
  version (linux) {
    Pkgs: glew
    Includes: glew.h
    Libs: -lGLEW, -lGL
  }

  version (windows) {
    Pkgs: glew
    Includes: glew.h
    Libs: -lopengl32
  }

  version (apple) {
    Pkgs: glew
    Includes: GL/glew.h
    Frameworks: OpenGL, Carbon
  }
}

# Mobile platforms
version (android || ios) {
  Includes: SDL_opengles2.h

  version (android) {
    Libs: -lGLESv2
  }

  version (ios) {
    Frameworks: OpenGLES, QuartzCore
  }
}

